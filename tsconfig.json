{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "lib/",
    "rootDir": "src/",
    "declaration": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/tests",
    "jest.config.ts",
    "node_modules"
  ]
}
